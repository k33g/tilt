{
  "name": "tilt",
  "version": "1.0.0",
  "description": "Minimalist, ES6 based, developer-friendly web framework for node.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "dependencies": {
    "classy-router": "0.0.3",
    "finalhandler": "^0.4.1",
    "path-to-regexp": "^1.3.0",
    "views-react": "github:mklabs/views-react"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.9.0",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.2",
    "watchd": "github:mklabs/watchd"
  },
  "scripts": {
    "test": "DEBUG=tilt* mocha -R spec",
    "start": "DEBUG=tilt* nodemon examples/vertical/index.js",
    "prestart": "npm run babel",
